generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  role      String   // 'senior' | 'junior' | 'admin'
  createdAt DateTime @default(now())
}

model School {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
}