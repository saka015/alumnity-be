{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-console": "warn",  // Show warnings for console.log usage
    "indent": ["error", 2],  // Enforce 2-space indentation
    "quotes": ["error", "single"]  // Enforce single quotes for strings
  }
}
